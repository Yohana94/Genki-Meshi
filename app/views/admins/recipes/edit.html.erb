<div class="box">
<div class="tile is-ancestor">

<%= form_with model: @recipe, url:  admins_recipe_path(@recipe), method: :patch do |f| %>
<div class="tile is-ancestor">
  <div class="tile is-vertical is-12">
    <div class="tile">
      <div class="tile is-parent">
        <article class="tile is-child notification is-info">
          <p class="title has-text-centered"> <%= f.text_field :recipe_name %></p>
          <figure class="image is-4by3 m-4">
            <%= f.file_field :image, accept: "image/*" %>
          </figure>
          <div class="has-text-centered">
            <%= link_to "保存", "/admins/recipes/:id", class:"button is-warning" %>
          </div>
        </article>
      </div>

      <div class="tile is-8 is-vertical">
        <div class="tile">
          <div class="tile is-parent">
            <article class="tile is-child box">
              <p class="title">材料</p>
              <p class="subtitle">
                <%= f.text_area :composition %>
              </p>
            </article>
          </div>
          <div class="tile is-parent">
            <article class="tile is-child box">
              <p class="title">情報 栄養</p>
              <p class="subtitle"><%= f.text_area :nutrition %></p>
            </article>
          </div>
        </div>
        <div class="tile is-parent">
          <article class="tile is-child box">
            <p class="title">作り方</p>
            <p class="subtitle"><%= f.text_area :body %></p>
          </article>
        </div>
      </div>
    </div>
</div>
<% end %>
</div>
</div>