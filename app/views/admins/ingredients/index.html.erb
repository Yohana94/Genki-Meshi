<div class="box">
  <div class="container">
    <div class="row">
      <div class="mx-auto col-11 col-sm-10 col-lg-8 col-xl-6">

        <div class="container">
          <h1 class="title has-text-centered has-text-link">材料一覧</h1>
        </div></br>

          <div clas="m-4"><%= link_to "材料 作成" , new_admins_ingredient_path, class:"button has-background-success-light" %></div></br></br>

           <table class="table table is-bordered">
             <thead class="has-background-primary-light">
                <tr>
                  <th>材料画像</th>
                  <th>材料名</th>
                  <th>カロリー数</th>
                  <th></th>
                </tr>
              </thead>

              <tfoot>
                <% @ingredients.each do |ingredient| %>
                <tr>
                  <th><%= image_tag ingredient.image, size: "30x30" %></th>
                  <th class="p-4"><%= ingredient.ingredient_name %></th>
                  <th class="p-4"><%= ingredient.calorie %></th>
                  <th><%= link_to "削除", admins_ingredient_path(ingredient.id), method: :delete,class:"button is-danger","data-confirm"=>"本当に削除しますか？" %></th>
                </tr>
                <% end %>
              </tfoot>
            </table>

        </div>
        <div class="row">
          <div style="position:relative; width:33.3333%; padding-right: 15px; padding-left:15px; margin-left: 33.3333%;">
          <!--div class="col-3 offset-3"-->
           <%= paginate @ingredients %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>