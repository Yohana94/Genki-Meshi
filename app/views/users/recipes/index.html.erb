
<section class="section">
  <div class="container">
    <div class="columns is-multiline">
      <% @recipes.each do |recipe| %>
        <div class="column is-4">
          <div class="card">
            <div class="card-image">
              <figure class="image is-4by3">
                <%= link_to admins_recipes_path(recipe) do %>
                  <%= image_tag recipe.image %>
                <% end %>
              </figure>
            </div>
            <div class="card-content">
              <div class="media">
                <div class="media-left">
                  <h2><%= recipe.recipe_name %></h2>
                </div>
                <div class="media-content">
                  <div class="titzale"><%#=link_to recipe.user.name, users_user_path(recipe.user) %></div>
                </div>
              </div>

              <div class="content">
                <time><%= recipe.updated_at.strftime("%Y-%m-%d %H:%M") %></time>
                <%= link_to "もっと見る", users_recipe_path(recipe.id), class:"button is-link" %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>