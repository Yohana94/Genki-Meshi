<section class="section">
  <div class="container has-background-warning-light">
    <div class="columns is-centered">
      <div class="column is-10">

<div class="container">
  <h1 class="title has-text-centered has-text-link">新規会員登録</h1>
</div></br>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>

<div class="field is-horizontal">
  <div class="field-label is-normal">
    <label class="label has-text-info">名前</label>
  </div>
  <div class="field-body">
    <div class="field is-narrow">
      <div class="control">
          <div class="control">
            <%= f.text_field :name %>
          </div>
        </div>
    </div>
  </div>
</div>

<div class="field is-horizontal">
  <div class="field-label is-normal">
    <label class="label has-text-info">メールアドレス</label>
  </div>
  <div class="field-body">
    <div class="field is-narrow">
      <div class="control">
          <div class="control">
            <%= f.text_field :email %>
          </div>
        </div>
    </div>
  </div>
</div>

<div class="field is-horizontal">
  <div class="field-label is-normal">
    <label class="label has-text-info">お誕生日</label>
  </div>
  <div class="field-body">
    <div class="field is-narrow">
      <div class="control">
          <div class="control">
            <%= f.text_field :birthday %>
          </div>
        </div>
    </div>
  </div>
</div>

<div class="field is-horizontal">
  <div class="field-label is-normal">
    <label class="label has-text-info">パスワード</label>
  </div>
  <div class="field-body">
    <div class="field is-narrow">
      <div class="control">
          <div class="control">
            <%= f.label :password %>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "new-password" %>
          </div>
        </div>
    </div>
  </div>
</div>

<div class="field is-horizontal">
  <div class="field-label is-normal">
    <label class="label has-text-info">パスワード確認</label>
  </div>
  <div class="field-body">
    <div class="field is-narrow">
      <div class="control">
          <div class="control">
            <%= f.label :password_confirmation %><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
          </div>
        </div>
    </div>
  </div>
</div>

<div class="field is-horizontal">
  <div class="field-label is-normal">
  <div class="actions has-text-centered">
    <%= f.submit "よし。。。！！", class:"button is-link" %>
  </div>
  </div>
</div>
<% end %>

     </div>
    </div>
  </div>
</section>