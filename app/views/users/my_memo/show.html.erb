<div class="box">
  <div class="container">
    <div class="row">
      <div class="mx-auto col-11 col-sm-10 col-lg-8 col-xl-6">

        <div class="container">
          <h1 class="title has-text-centered has-text-link">カロリー計算</h1>
        </div></br>

       <table class="table table is-bordered">
         <thead class="has-background-primary-light">
            <tr>
              <th>材料名</th>
              <th>カロリー</th>
              <th>数量</th>
              <th>総カロリー</th>
            </tr>
          </thead>

          <tfoot>
            <% num = 0 %>
            <% @ingredients.each do |ingredient| %>
              <% if ingredient.calorie.to_i > 0 %>
                <tr>
                  <th><%= ingredient.ingredient_name %></th>
                  <th><%= ingredient.calorie %></th>
                  <th>
                    <% total =  (ingredient.calorie.to_i * 1.1).floor * ingredient.calorie.to_i %>
                    <%= total %>
                  </th>
                    <% num += total%>
                  <th><%= link_to "削除", "/users/my_memo/:id", method: :delete,class:"button is-danger","data-confirm"=>"本当に削除しますか？" %></th>
                </tr>
              <%end%>
            <% end %>
          </tfoot>
        </table>
        <div>total calorie:  <%= num %></div>
      </div>
    </div>
  </div>
</div>
