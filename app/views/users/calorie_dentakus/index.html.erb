<div class="box">
  <div class="container">
    <div class="row">
      <div class="mx-auto col-11 col-sm-10 col-lg-8 col-xl-6">

        <div class="container">
          <h1 class="title has-text-centered has-text-link">カロリー計算 </h1>
        </div></br>

       <table class="table table is-bordered">
         <thead class="has-background-primary-light">
            <tr>
              <th>材料名</th>
              <th>カロリー</th>
              <th>個数</th>
              <th>総カロリー</th>
              <th></th>
            </tr>
         </thead>

        <tfoot>
          <%# @ingredients.each do |ingredient| %>
            <% @ingredients.each do |ingredient| %>
              <tr>
                  <th><%= ingredient.ingredient_name %></th>
                  <th><%= calorie = ingredient.calorie %></th>
                  <th><%= amount = ingredient.amount %></th>
                  <th><%= calorie * amount %></th>
                  <th><%= link_to "削除", users_calorie_dentakus_path(ingredients: params[:ingredients], delete_ingredient: ingredient.id), class:"button is-danger","data-confirm"=>"本当に削除しますか？" %></th>
              </tr>
            <% end %>

        <%# end %>
        </tfoot>
      </table>

      <div class="container">トタルカロリー　<%= @total %></div></br>

    <% if user_signed_in? %>
        <%= form_with url: users_mymemos_path, method: :post do |f| %>
        <% @resources.each do |resource| %>
          <%= hidden_field_tag 'ingredient[]', [resource[:id], resource[:amount] ] %>
        <% end %>
        <%= f.submit "メモにしましょう", class: "button has-background-primary has-text-warning-light" %>
      <% end %>
    <% end %>

      </div>
    </div>
  </div>
</div>
